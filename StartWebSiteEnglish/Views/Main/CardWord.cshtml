@model List<StartWebSiteEnglish.Models.WordCard>
@{
    ViewBag.Title = "CardWord";
    Layout = "~/Views/Shared/_Main.cshtml";
}

@section Body{
    @*<link href="~/Content/Traing/speak.css" rel="stylesheet" />*@
    <link href="~/Content/Traing/dfn.css" rel="stylesheet" />
    <div style="width: 85%; height: 80%; background:#fff; margin-top: 20px; padding: 30px; border: 1px solid #111;">
        <div id="container">
            @*<ul id="spoken"></ul>
                <form id="speak">
                    <input type="text" id="words" aria-label="type words to be spoken" />
                    <button type="submit" id="speaker">speak</button>
                </form>
                <select id="voices"><option>Voices</option></select>*@
            <div class="form">
                <div class="incentive">
                    Score <span class="emphasis"><span class="score-counter">40</span> more</span> points to complete survey
                </div>
                <ul style="list-style: none;">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li style="height: 300px; display: none;" class="quiz-step step-@i">
                            <div class="points-system" style="display: none;">
                                <div class="wrapper">
                                    <img class="circle img-circle" src="@Model[i].UrlPhoto" />
                                </div>
                                <div>
                                    @Model[i].Translate
                                </div>
                            </div>
                            <div class="survey">
                                <div class="survey-wrap">
                                    <div class="questions-wrap">
                                        @Model[i].Word
                                    </div>
                                    <div class="button">
                                        <button type="button" name="submit" id="submit" class="submit button-yes">
                                            <span class="span-yes">Помню</span>
                                        </button>
                                        <button type="button" name="no" id="no" class="submit button-no">
                                            <span class="span-no">Не помню</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <script>
        $(document).ready(function () {



            $(".step-1").css("display", "block");
            $("#no").click(function () {
                $(".points-system").css("display", "block");
                this.innerText = "Следующий";
                this.removeClass("button-no");
                this.addClass("next");
                $("#submit").css("display", "none");
            });

            $(".next").click(function () {
                $(".points-system").css("display", "none");
                this.innerText = "Не помню";
                this.addClass("button-no");
                this.removeClass("next");
                $("#submit").css("display", "block");
            });

            $("#submit").click(function () {
                $(".points-system").css("display", "block");
                $("#no").innerText = "Следующий";
                $("#no").removeClass("button-no");
                $("#no").addClass("next");
                this.css("display", "none");
            });

            
        })
    </script>
    @*<script src="~/Content/Traing/sb.js"></script>*@
}

